# Trading Agent Environment Configuration
# Copy this file to .env and configure for your environment

# ============================================================================
# API Configuration
# ============================================================================

# Backend API URL (for frontend)
NEXT_PUBLIC_API_URL=http://localhost:8000

# CORS Origins (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# ============================================================================
# Delta Exchange API Credentials
# ============================================================================

# Delta Exchange API credentials (required for market data)
DELTA_API_KEY=your_delta_api_key_here
DELTA_API_SECRET=your_delta_api_secret_here
DELTA_API_URL=https://api.delta.exchange

# ============================================================================
# Telegram Bot Configuration
# ============================================================================

# Telegram bot credentials (optional - for notifications)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ============================================================================
# Database Configuration
# ============================================================================

# SQLite database path (default: kubera_pokisham.db)
DATABASE_URL=sqlite:///kubera_pokisham.db

# Redis URL (optional - for caching)
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Security Configuration
# ============================================================================

# JWT Secret Key (for API authentication - optional)
JWT_SECRET_KEY=your_jwt_secret_key_here

# API Key (for additional API security - optional)
API_KEY=your_api_key_here

# ============================================================================
# Trading Configuration
# ============================================================================

# Initial balance for paper trading
INITIAL_BALANCE=10000.0

# Trading mode (paper or live - use paper for testing)
TRADING_MODE=paper

# ============================================================================
# Monitoring Configuration
# ============================================================================

# Prometheus metrics port
PROMETHEUS_PORT=9090

# Grafana port
GRAFANA_PORT=3000

# ============================================================================
# Development Configuration
# ============================================================================

# Debug mode (true/false)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ============================================================================
# Production Configuration
# ============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Enable/disable features
ENABLE_TELEGRAM=true
ENABLE_MONITORING=true
ENABLE_WEBSOCKET=true
