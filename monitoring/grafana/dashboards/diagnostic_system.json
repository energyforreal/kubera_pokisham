{
  "dashboard": {
    "title": "Trading System Diagnostic Dashboard",
    "tags": ["diagnostic", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Health Status",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 24, "h": 4},
        "targets": [
          {
            "expr": "diagnostic_component_health",
            "legendFormat": "{{component}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "yellow"},
                {"value": 2, "color": "green"}
              ]
            },
            "mappings": [
              {"type": "value", "value": "0", "text": "Critical"},
              {"type": "value", "value": "1", "text": "Warning"},
              {"type": "value", "value": "2", "text": "Healthy"}
            ]
          }
        }
      },
      {
        "id": 2,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "diagnostic_system_cpu_usage_percent",
            "legendFormat": "CPU %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "max": 100, "min": 0}
        ]
      },
      {
        "id": 3,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "diagnostic_system_memory_usage_percent",
            "legendFormat": "Memory %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "max": 100, "min": 0}
        ]
      },
      {
        "id": 4,
        "title": "Component Response Time",
        "type": "graph",
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "diagnostic_component_response_time_ms",
            "legendFormat": "{{component}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ms", "min": 0}
        ]
      },
      {
        "id": 5,
        "title": "Alert Counts",
        "type": "graph",
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(diagnostic_alerts_total[5m])",
            "legendFormat": "{{severity}} - {{rule}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 20, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(diagnostic_errors_total[5m])",
            "legendFormat": "{{component}} - {{level}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "Trade Execution Rate",
        "type": "graph",
        "gridPos": {"x": 12, "y": 20, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(diagnostic_trades_total[5m])",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 8,
        "title": "Component Uptime",
        "type": "stat",
        "gridPos": {"x": 0, "y": 28, "w": 24, "h": 4},
        "targets": [
          {
            "expr": "diagnostic_component_uptime_seconds",
            "legendFormat": "{{component}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      }
    ],
    "refresh": "10s",
    "schemaVersion": 27,
    "version": 1
  }
}

